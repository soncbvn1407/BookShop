@model BookShop.Models.Category

<div class="container col-md-6 text-center mt-3">
    <form class="card p-3 bg-light" asp-controller="Category" asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <h3 class="text text-primary">Edit book category</h3>
        <div class="form-group">
            <label asp-for="Name" class="text text-success"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div>
          <div class="form-group">
            <label asp-for="DetailedId" class="text text-success"></label>
            <select asp-for="DetailedId" class="form-control" asp-items="@(new SelectList(ViewBag.Detailes,"Id","Name"))">
                <option>Select one</option>
            </select>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Edit" />
        </div>
    </form>
</div>